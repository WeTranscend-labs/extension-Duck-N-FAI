{
  "manifest_version": 3,
  "name": "DuckChain Assistant",
  "version": "1.0.0",
  "description": "A Chrome extension with DuckChain AI Assistant",
  "permissions": ["storage", "tabs", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"],
      "css": ["assets/style.css"]
    }
  ],
  "action": {
    "default_title": "DuckChain Assistant",
    "default_icon": {
      "16": "./icons/rubber-duck.png",
      "48": "./icons/rubber-duck.png",
      "128": "./icons/rubber-duck.png"
    }
  },
  "icons": {
    "16": "./icons/rubber-duck.png",
    "48": "./icons/rubber-duck.png",
    "128": "./icons/rubber-duck.png"
  }
}
